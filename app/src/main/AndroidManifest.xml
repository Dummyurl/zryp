<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shunmai.zryp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    //用于硬盘缓存和读取
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.shunmai.zryp.app.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.shunmai.zryp.ui.open.GuideActivity"
            android:label="@string/title_activity_guide"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.shunmai.zryp.ui.open.WelcomeActivity"
            android:label="@string/title_activity_welcome"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.shunmai.zryp.ui.home.HomeActivity"
            android:label="@string/title_activity_home"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.shunmai.zryp.ui.goods.GoodsDetailActivity"
            android:label="@string/title_activity_goods_detail"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.shunmai.zryp.ui.goods.GoodsListActivity"
            android:label="@string/title_activity_goods_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.shunmai.zryp.ui.userinfo.order.OrderActivity"
            android:label="@string/title_activity_order"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.shunmai.zryp.ui.userinfo.order.ScoreActivity"
            android:label="@string/title_activity_score"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.shunmai.zryp.ui.userinfo.order.UserApproveActivity"
            android:label="@string/title_activity_user_approve"
            android:theme="@style/AppTheme" />
        <activity android:name="com.shunmai.zryp.ui.goods.GoodsOrderActivity" />
        <activity android:name="com.shunmai.zryp.ui.userinfo.account.LoginActivity" />
        <activity android:name="com.shunmai.zryp.ui.userinfo.account.UserHandleActivity" />
        <activity android:name="com.shunmai.zryp.ui.goods.GoodsSearchActivity" />
        <activity
            android:name="com.shunmai.zryp.ui.userinfo.account.AddressListActivity"
            android:hardwareAccelerated="false"
            android:launchMode="singleTask" />
        <activity
            android:name="com.shunmai.zryp.ui.userinfo.account.AddressDetailActivity"
            android:launchMode="singleTask" />
        <activity
            android:name="com.shunmai.zryp.ui.userinfo.account.FootPrintActivity"
            android:launchMode="singleTask" />
        <activity android:name="com.shunmai.zryp.ui.userinfo.underling.MyUnderlingActivity"/>
        <!-- 微信登录 begin -->
        <activity
            android:name=".wxapi.WXEntryActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@android:style/Theme.Translucent.NoTitleBar.Fullscreen" />
    </application>

</manifest>