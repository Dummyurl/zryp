<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>

    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/shape_divider"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:showDividers="middle">

            <EditText
                style="@style/editstyle"
                android:id="@+id/et_register_phone"
                android:layout_width="match_parent"
                android:layout_marginTop="22dp"
                android:digits="0123456789"
                android:drawableLeft="@mipmap/icon_text_phone"
                android:drawablePadding="8dp"
                android:hint="请输入手机号"
                android:inputType="number"
                android:maxLength="11"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                />


            <LinearLayout
                android:id="@+id/ll_phone"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="22dp"
                android:background="@color/withe"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:paddingTop="15dp">

                <EditText
                    style="@style/editstyle"
                    android:id="@+id/et_register_code"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:digits="0123456789"
                    android:drawableLeft="@mipmap/icon_text_envelope"
                    android:drawablePadding="8dp"
                    android:hint="请输入验证码"
                    android:inputType="number"
                    android:maxLength="6"
                    />

                <View
                    android:layout_width="1dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:background="#ffdddddd" />

                <TextView
                    android:id="@+id/tv_register_get_code"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:background="@color/withe"
                    android:gravity="center"
                    android:text="获取验证码"
                    android:textColor="@color/fontOrange" />
            </LinearLayout>

            <EditText
                style="@style/editstyle"
                android:id="@+id/et_register_password"
                android:layout_width="match_parent"
                android:layout_marginTop="22dp"
                android:background="@color/white"

android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:drawableLeft="@mipmap/icon_text_lock"
                android:drawablePadding="8dp"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:maxLength="20"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cb_user_rule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/selector_checkbox"
                    android:checked="true"
                    android:text="我已阅读"
                    android:textColor="@color/fontNormal" />

                <TextView
                    android:id="@+id/tv_register_rule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="《智融优品用户协议》"
                    android:textColor="@color/orange" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape_botton"
            android:text="注 册"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已有账户？"
                android:textColor="@color/fontNormal" />

            <TextView
                android:id="@+id/tv_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="立即登录"
                android:textColor="@color/fontOrange" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>
</layout>
