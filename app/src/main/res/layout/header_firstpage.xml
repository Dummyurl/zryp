<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="handler"
            type="com.shunmai.zryp.eventhandler.home.FirstPageHandler" />

        <variable
            name="bean"
            type="com.shunmai.zryp.bean.home.HomePageBean" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundColor"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="295dp">

            <com.youth.banner.Banner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="205dp"
                android:background="@color/withe"
                app:delay_time="7000"
                app:image_scale_type="fit_xy"
                app:indicator_drawable_selected="@drawable/shape_circle_background"
                app:indicator_drawable_unselected="@drawable/shape_indicator"
                app:indicator_height="5dp"
                app:indicator_margin="4dp"
                app:indicator_width="12dp"
                app:is_auto_play="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/shape_shadow_top"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/icon_new_user_gift"
                    android:gravity="center"
                    android:text="新人福利" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/icon_share"
                    android:gravity="center"
                    android:text="分享海报" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/icon_sign"
                    android:gravity="center"
                    android:text="签到有礼" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/icon_you_xuan"
                    android:gravity="center"
                    android:text="智融优选" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/icon_saleoff"
                    android:gravity="center"
                    android:text="天天特价" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_shadow"
            android:orientation="horizontal"
            android:padding="5dp"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@color/backgroundColor"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:background="@color/withe"
                    android:orientation="horizontal"
                    android:paddingTop="15dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:src="@mipmap/icon_flash_sale" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="9dp"
                        android:background="@drawable/shape_circle_left"
                        android:padding="1dp"
                        android:text="08点场"
                        android:textColor="@color/withe"
                        android:textSize="12dp" />

                    <com.shunmai.zryp.view.CountdownTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/ll_xsg"
                        android:background="@drawable/shape_xsg_time"
                        android:paddingBottom="1dp"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:paddingTop="1dp"
                        android:text="00:34:03"
                        android:textColor="@color/fontRed"
                        android:textSize="12dp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:paddingTop="10dp"
                    android:background="@color/withe"
                    android:displayImg="@{bean.getGoodInfo().getSecKillAndScorePro().get(0).getImgUrl()}"
                    android:src="@mipmap/img_placeholder_loading_2" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="81dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/withe"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:displayImg="@{bean.getGoodInfo().getRecPro().getPromotionGoods().get(0).getDefalutPhotoURL()}"
                        android:paddingTop="3dp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/backgroundColor" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:displayImg="@{bean.getGoodInfo().getRecPro().getPromotionGoods().get(1).getDefalutPhotoURL()}"
                        android:paddingTop="3dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@color/withe"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingTop="13dp"
                        android:setprice='@{bean.getGoodInfo().getRecPro().getPromotionGoods().get(0).getPromotionPrice()}'
                        android:textColor="#999999"
                        android:textline="@{true}" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/backgroundColor" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="1dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingTop="13dp"
                        android:setprice='@{bean.getGoodInfo().getRecPro().getPromotionGoods().get(1).getPromotionPrice()}'
                        android:textColor="#999999"
                        android:textline="@{true}" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@color/withe"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingBottom="10dp"
                        android:paddingTop="13dp"
                        android:text='@{"￥"+bean.getGoodInfo().getRecPro().getPromotionGoods().get(0).getPrice()}'
                        android:textColor="@color/fontRed"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/backgroundColor" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingBottom="10dp"
                        android:paddingTop="13dp"
                        android:text='@{"￥"+bean.getGoodInfo().getRecPro().getPromotionGoods().get(0).getPrice()}'
                        android:textColor="@color/fontRed"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/backgroundColor" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/backgroundColor"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:background="@color/withe"
                    android:orientation="horizontal"
                    android:paddingLeft="8dp"
                    android:paddingTop="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="9dp"
                        android:text="暴赚积分"
                        android:textColor="@color/fontRed"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="6dp"
                        android:text="/ 超高积分等你来"
                        android:textColor="#999999"
                        android:textSize="12dp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:background="@color/withe"
                    android:displayImg="@{bean.getGoodInfo().getSecKillAndScorePro().get(1).getImgUrl()}"
                    android:paddingTop="10dp"
                    android:src="@mipmap/img_placeholder_loading_2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="81dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/withe"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:displayImg="@{bean.getGoodInfo().getRecPro().getPromotionGoods().get(2).getDefalutPhotoURL()}"
                        android:paddingTop="3dp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/backgroundColor" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:displayImg="@{bean.getGoodInfo().getRecPro().getPromotionGoods().get(3).getDefalutPhotoURL()}"
                        android:paddingTop="3dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@color/withe"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingTop="13dp"
                        android:setprice='@{bean.getGoodInfo().getRecPro().getPromotionGoods().get(2).getPromotionPrice()}'
                        android:textColor="#999999"
                        android:textline="@{true}" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/backgroundColor" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="1dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingTop="13dp"
                        android:setprice='@{bean.getGoodInfo().getRecPro().getPromotionGoods().get(3).getPromotionPrice()}'
                        android:textColor="#999999"
                        android:textline="@{true}" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@color/withe"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingBottom="10dp"
                        android:paddingTop="13dp"
                        android:text='@{"￥"+bean.getGoodInfo().getRecPro().getPromotionGoods().get(2).getPrice()}'
                        android:textColor="@color/fontRed"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/backgroundColor" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingBottom="10dp"
                        android:paddingTop="13dp"
                        android:text='@{"￥"+bean.getGoodInfo().getRecPro().getPromotionGoods().get(3).getPrice()}'
                        android:textColor="@color/fontRed"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <com.shunmai.zryp.view.MyBanner
            android:id="@+id/banner1"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            android:background="@color/backgroundColor"
            app:delay_time="7000"
            app:image_scale_type="fit_xy"
            app:indicator_drawable_selected="@mipmap/banner_red"
            app:indicator_drawable_unselected="@mipmap/banner_grey"
            app:indicator_margin="3dp"
            app:indicator_width="9dp"
            app:is_auto_play="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="355dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/shape_shadow_pink"
            android:orientation="vertical"
            android:visibility="visible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="16dp"
                android:onClick='@{view->handler.toGoodsListAcitvity(view,5,"超值推荐")}'>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/icon_main_title_bac_1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="超值拼团好物"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:drawableEnd="@mipmap/icon_arrow"
                    android:text="更多"
                    android:textColor="#ff666666" />
            </RelativeLayout>

            <android.support.v4.view.ViewPager
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="425dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_shadow_orange"
            android:orientation="vertical"
            android:visibility="visible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="16dp"
                android:onClick='@{view->handler.toGoodsListAcitvity(view,5,"超值推荐")}'>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/icon_main_title_bac_2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="智融优选"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:drawableEnd="@mipmap/icon_arrow"
                    android:text="更多"
                    android:textColor="#ff666666" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#ffe9e9e9"
            android:visibility="gone" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/icon_main_title_bac_3" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:text="猜你喜欢"
                android:textColor="@color/black"
                android:textSize="18sp" />


        </RelativeLayout>
    </LinearLayout>
</layout>
