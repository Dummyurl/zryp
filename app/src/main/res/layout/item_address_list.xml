<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_margin="2dp"
        android:id="@+id/ll_item"
        android:layout_height="wrap_content"
        android:background="@color/withe"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:padding="10dp"
            android:textSize="16sp"
            android:text="陈粒"/>
        <TextView
            android:id="@+id/tv_user_phone"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:padding="10dp"
            android:textSize="16sp"
            android:text="15349280106"/>
    </LinearLayout>
        <TextView
            android:id="@+id/tv_user_address"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:text="西安市长安区神州三路与航开路交汇处东南角航都旺角 21号楼层18号"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/shape_dash"/>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/cb_address"
                android:button="@null"
                android:padding="10dp"
                android:drawableLeft="@drawable/selector_checkbox_circle"
                android:drawablePadding="6dp"
                android:layout_width="wrap_content"
                android:textColor="#666666"
                android:layout_height="wrap_content"
                android:text="设为默认地址"/>
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_address_edit"
                android:layout_width="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="6dp"
                android:textColor="@color/black"
                android:layout_marginEnd="13dp"
                android:paddingBottom="6dp"
                android:text="编辑"
                android:background="@drawable/shape_font_rect"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_address_delete"
                android:layout_width="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textColor="@color/black"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:text="删除"
                android:layout_marginRight="13dp"
                android:background="@drawable/shape_font_rect"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</layout>