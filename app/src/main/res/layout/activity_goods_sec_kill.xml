<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:titlebar="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.goods.GoodsSecKillActivity">


        <com.wuhenzhizao.titlebar.widget.CommonTitleBar
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:onBack="@{true}"
            titlebar:leftDrawable="@color/withe"
            titlebar:leftType="imageButton"
            titlebar:showBottomLine="true"
            titlebar:centerText="智融优品"
            titlebar:centerType="textView"
            titlebar:fillStatusBar="false"
            />
        <RadioGroup
            android:id="@+id/rg_sec_kill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/withe"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone"
                android:checked="true"
                android:button="@null"
                android:gravity="center"
                android:background="@drawable/selector_check_sec_kill"
                android:textColor="@color/withe"
                android:textSize="20dp" />

            <RadioButton
                android:id="@+id/rb_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_check_sec_kill"
                android:button="@null"
                android:visibility="gone"
                android:gravity="center"
                android:textColor="@color/withe"
                android:textSize="20dp" />

            <RadioButton
                android:id="@+id/rb_3"
                android:background="@drawable/selector_check_sec_kill"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone"
                android:button="@null"
                android:gravity="center"
                android:textColor="@color/withe"
                android:textSize="20dp" />

            <RadioButton
                android:id="@+id/rb_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone"
                android:background="@drawable/selector_check_sec_kill"
                android:button="@null"
                android:gravity="center"
                android:textColor="@color/withe"
                android:textSize="20dp" />
        </RadioGroup>
        <android.support.v4.view.ViewPager
            android:id="@+id/vp_sec_kill"
            android:background="@color/backgroundColor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</layout>