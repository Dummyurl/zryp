<?xml version="1.0" encoding="utf-8"?>
<layout>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:id="@+id/ll_item"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="提现金额"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="21dp"
        android:textColor="@color/fontNormal"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15dp"
        />
    <TextView
        android:id="@+id/tv_count_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="600.00元"
        android:textColor="@color/fontRed"
        app:layout_constraintTop_toTopOf="@+id/tv_count"
        app:layout_constraintStart_toEndOf="@+id/tv_count"
        android:layout_marginStart="9dp"
        />
    <TextView
        android:id="@+id/tv_time_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:text="提现时间"
        app:layout_constraintTop_toBottomOf="@+id/tv_count"
        android:layout_marginTop="10dp"
        android:textColor="@color/fontGrey"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15dp"
        />
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:text="提现时间"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_time_hint"
        android:layout_marginTop="10dp"
        android:textColor="@color/fontGrey"
        app:layout_constraintStart_toEndOf="@+id/tv_time_hint"
        android:layout_marginStart="10dp"
        />
    <TextView
        android:id="@+id/tv_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="提现成功"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toTopOf="@+id/tv_count"
        android:textColor="@color/fontGrey"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="15dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/colorLineItem"/>
</android.support.constraint.ConstraintLayout>
</layout>