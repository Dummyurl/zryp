<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">

        <shape >
            <corners android:radius="10dip" />
            <stroke
                android:width="1dp"
                android:color="@color/fontBlack"
                />

            <padding
                android:bottom="3dp"
                android:left="3dp"
                android:right="3dp"
                android:top="3dp" />

        </shape>
    </item>
    <item android:id="@android:id/progress">

        <clip>
            <bitmap android:src="@mipmap/img_sec_progessbar_black" />

        </clip>
    </item>
</layer-list>